<div class="row align-items-center py-4">
  <div class="col-md-4 text-center"><%= image_tag @order.products.first.images.first.variant(:medium) %></div>
  <div class="col-md-8">
    <h1>Order #<%= @order.id %> <small><span class="badge rounded-pill <%=@order.paid? ? 'text-bg-primary' : 'text-bg-warning'%>"><%= @order.state %></span></small></h1>
    <ul class="list-unstyled">
      <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date.strftime("%a %d %B %Y") %></li>
      <li><strong>PRODUCTS</strong></li>
      <% @order.order_products.each do |p| %>
        <li><%=  Product.find(p.product_id).name %> - Size : <%= p.size %>, Quantity : <%= p.quantity %></li>
      <% end %>
      <li><strong>TOTAL</strong> <%= @order.total %> $</li>
      <li><strong>TO</strong> <%= @order.address %></li>
    </ul>
    <p>Estimated delivery in <strong>2 business days</strong></p>
  </div>
</div>
