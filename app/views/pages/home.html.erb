<div class="container py-2 my-3">
  <div class="row row-cols-1 row-cols-md-3 g-4 py-3">
    <% @categories.each do |category| %>
    <div class="col d-flex justify-content-center">
      <%= link_to category_path(category), class:"text-decoration-none" do %>
      <div class="card h-100 border-0 shadow" style="max-width: 300px;">
        <%= category.image.present? ? image_tag(category.image.variant(:large)) : image_tag("https://via.placeholder.com/300") %>
        <div class="card-body">
          <h5 class="card-title text-center"><%= category.name %></h5>
        </div>
      </div>
    <% end %>
    </div>
  <% end %>
  </div>
</div>

