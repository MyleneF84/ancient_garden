<!DOCTYPE html>
<html>
  <head>
    <title>ðŸŒ¿ Ancient Garden</title>
    <meta name="viewport" content="width=device-width,initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render "shared/flashes" %>
    <%= render "shared/navbar" %>
    <main class="row g-0">
      <div class="col-2 admin-nav bg-dark d-flex justify-content-center pt-3">
        <nav class="nav flex-column px-md-3 px-sm-0  mt-2 sticky-top">
          <%= link_to admins_path, class:"nav-link" do %>
          <div class="nav-item d-flex align-items-center"><%= icon("fa-solid", "gauge-high") %> <span class="ms-1 d-none d-md-block">Dashboard</span></div>
          <% end %>
          <%= link_to admins_products_path, class:"nav-link" do %>
            <div class="nav-item d-flex align-items-center"><%= icon("fa-solid", "cart-shopping") %> <span class="ms-1 d-none d-md-block">Products</span></div>
          <% end %>
          <%= link_to admins_categories_path, class:"nav-link" do %>
            <div class="nav-item d-flex align-items-center"><%= icon("fa-solid", "list") %> <span class="ms-1 d-none d-md-block">Categories</span></div>
          <% end %>
          <%= link_to admins_orders_path, class:"nav-link" do %>
            <div class="nav-item d-flex align-items-center"><%= icon("fa-solid", "truck-fast") %> <span class="ms-1 d-none d-md-block">Orders</span></div>
          <% end %>
          <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item", class:"nav-link" do %>
            <div class="nav-item d-flex align-items-center"><%= icon("fa-solid", "right-from-bracket") %> <span class="ms-1 d-none d-md-block">Log out</span></div>
          <% end %>
        </nav>
      </div>
      <div class="col-10">
      <div class="container mt-2 p-3">
        <%= yield %>
      </div>
      </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
  </body>
</html>
