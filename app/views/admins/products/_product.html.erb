<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
    <% if product.images.attached? %>
      <% product.images.each do |image| %>
        <%= image_tag(image.variant(:medium), class:"img-fluid rounded-start") %>
        <% end %>
      <% else %>
        <%= image_tag("https://via.placeholder.com/250", class:"img-fluid rounded-start")  %>
      <% end %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= product.name %></h5>
        <p class="card-text"><%= product.description %></p>
        <p class="card-text"><%= product.price %> $</p>
      </div>
    </div>
  </div>
</div>
