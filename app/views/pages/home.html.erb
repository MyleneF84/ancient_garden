<div class="container mt-2">
  <div class="row row-cols-1 row-cols-md-2 g-4 py-3">
    <% @categories.each do |category| %>
    <div class="col">
      <%= link_to category_path(category), class:"text-decoration-none" do %>
      <div class="card">
        <%= category.image.present? ? image_tag(category.image.variant(:large)) : image_tag("https://via.placeholder.com/300") %>
        <div class="card-body">
          <h5 class="card-title"><%= category.name %></h5>
          <p class="card-text"><%= category.description %></p>
        </div>
      </div>
    <% end %>
    </div>
  <% end %>
  </div>
</div>

