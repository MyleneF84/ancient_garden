<div class="d-flex justify-content-between">
  <h1>Categories</h1>
  <%= link_to "New category", new_admins_category_path, class:"btn btn-primary" %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col"></th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
  <tbody>
    <% @admins_categories.find_each do |category| %>
    <tr>
      <th scope="row"><%= category.id %></th>
      <td><%= category.image.present? ? image_tag(category.image.variant(:thumb)) : image_tag("https://via.placeholder.com/100") %></td>
      <td><%= link_to category.name, admins_category_path(category) %></td>
      <td><%= category.description %></td>
    </tr>
    <% end %>
  </tbody>
</table>
