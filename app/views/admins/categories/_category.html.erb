<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
    <% if category.image.attached? %>
        <%= image_tag(category.image.variant(:medium), class:"img-fluid rounded-start") %>
      <% else %>
        <%= image_tag("https://via.placeholder.com/250", class:"img-fluid rounded-start")  %>
      <% end %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= category.name %></h5>
        <p class="card-text"><%= category.description %></p>
      </div>
    </div>
  </div>
</div>
